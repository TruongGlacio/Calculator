<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >   <!-- Trạng thái khi nút click -->
        <shape>
            <corners
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp"
                android:bottomLeftRadius="20dp"
                android:bottomRightRadius="20dp"
                />
            <gradient
                android:angle="90"
                android:centerX="1%"
                android:centerColor="#212121"
                android:startColor="#212121"
                android:endColor="#212121"
                android:type="linear"
                />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp"
                />
            <stroke
                android:width="5dp"
                android:color="#263238"
                />
        </shape>
    </item>

    <item>            <!-- Trạng thái bình thường khi không click -->
        <shape>
            <corners
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp"
                android:bottomLeftRadius="20dp"
                android:bottomRightRadius="20dp"
                />

            <gradient
                android:angle="90"
                android:centerX="1%"
                android:centerColor="#263238"
                android:startColor="#263238"
                android:endColor="#263238"
                android:type="linear"
                />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
            <stroke
                android:width="2dp"
                android:color="#212121" /><!-- Thiết lập màu và độ rộng cho viền -->

            <!-- Thiết lập màu nền cho nút -->
        </shape>
    </item>

</selector>
